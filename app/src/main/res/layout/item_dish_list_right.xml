<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:descendantFocusability="blocksDescendants">
    <TextView
        android:id="@+id/tv_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="3dp"
        android:visibility="invisible"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        android:background="@color/colorWhite"
        xmlns:android="http://schemas.android.com/apk/res/android" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="3dp">
        <ImageView
            android:id="@+id/iv_dish_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:scaleType="fitCenter"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">
            <TextView
                android:id="@+id/tv_dish_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:textStyle="bold"
                android:text="Name"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/tv_dish_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:textSize="15sp"
                android:layout_below="@id/tv_dish_title"
                android:text="describe"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_dish_desc"
                android:layout_alignParentBottom="true">
                <TextView
                    android:id="@+id/tv_dish_price_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignBottom="@id/tv_dish_price"
                    android:textSize="12sp"
                    android:textColor="@color/colorRed"
                    android:gravity="bottom"
                    android:text="ï¿¥"/>
                <TextView
                    android:id="@+id/tv_dish_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_dish_price_unit"
                    android:textSize="18sp"
                    android:textColor="@color/colorRed"
                    android:text="0"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">
                    <ImageButton
                        android:id="@+id/ib_dish_amount_sub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_alignParentLeft="true"
                        android:focusable="false"
                        android:src="@drawable/ic_remove_circle_outline_red_24dp"
                        android:background="@null"/>
                    <TextView
                        android:id="@+id/tv_dish_amount_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_centerInParent="true"
                        android:text="0"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:ems="1"/>
                    <ImageButton
                        android:id="@+id/ib_dish_amount_plus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:focusable="false"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_add_circle_red_24dp"
                        android:background="@null"/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>