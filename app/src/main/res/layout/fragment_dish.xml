<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ViewFlipper
        android:id="@+id/vf_banner"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:autoStart="true"
        android:flipInterval="5000"
        android:inAnimation="@anim/banner_right_in"
        android:outAnimation="@anim/banner_left_out"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/vf_banner"
        android:layout_above="@+id/rl_cart"
        android:orientation="horizontal">
        <ListView android:id="@+id/lv_dish_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@color/colorLittleGray"/>
        <com.mxswork.order.view.DishRightListView
            android:id="@+id/lv_dish_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_cart"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/tv_cart_final_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:text="￥ 0"
            android:textColor="@color/colorRed"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/tv_cart_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_cart_final_price"
            android:layout_alignBottom="@id/tv_cart_final_price"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:text="￥ 0"
            android:textColor="@color/colorNearRed"
            android:textSize="16sp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_cart_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:text="未选择"/>

        <TextView
            android:id="@+id/tv_select_coupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/btn_purchase"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorBlue"
            android:text="点此选择使用优惠券"/>

        <Button
            android:id="@+id/btn_purchase"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:text="下单"
            android:enabled="false"
            android:textColor="#ffffff"
            android:minHeight="0dp"
            android:background="@drawable/style_button_purchase"/>
    </RelativeLayout>
    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/cl_snackbar"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>
